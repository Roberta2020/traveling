#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//usr/local/bin/node" ]; then
  "$basedir//usr/local/bin/node"  "$basedir/../resource-http/bin/http-server" "$@"
  ret=$?
else 
  /usr/local/bin/node  "$basedir/../resource-http/bin/http-server" "$@"
  ret=$?
fi
exit $ret
